@model AdBoard.WebUI.Models.UserAdsViewModel

@{
    ViewBag.Title = "Your Ads";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>
}

<div class="page-header">
    <h1>
        My Ads
        <a href="@Url.Action("Create","Ad")" class="btn btn-primary btn-lg" role="button" style="float:right;">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new
        </a>
    </h1>
</div>

<h2>Your ads:</h2>
@foreach (var p in @Model.Ads)
{
    @Html.Partial("AdSummary", p);
}

<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("UserAds", new { page = x}))
</div>
