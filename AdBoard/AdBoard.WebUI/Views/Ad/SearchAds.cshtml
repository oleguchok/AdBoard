@model IEnumerable<AdBoard.Domain.Entities.Ad>

@{
    ViewBag.Title = "SearchAds";
}

<h2>Search Ads</h2>
<div class="col-md-12 col-sm-12">
<p>
    @using (Html.BeginForm("SearchAds","Ad",FormMethod.Get))
    {
        <div class="form-group">
            @Html.Label("Title", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBox("adName")
            </div>
            <div class="col-md-4">
                @Html.DropDownList("Category", String.Empty)
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-sm" value="Search" />
            </div>
        </div>        
    }
</p>
</div>
<div class="col-md-12">
@foreach (var item in Model) {
    <div class="well" id="user-ads">
        <h3>
            <a href="@Url.Action("AdInfo", "Ad", new { id = @item.Id })">
                <strong>@item.Name</strong>
            </a>
            <span class="pull-right label label-primary">@item.Date.ToShortDateString() | @item.Price.ToString("# руб")</span>

        </h3>
        <span class="lead" id="profile-text">@item.Description</span>
        </div>
}
</div>
