@model AdBoard.WebUI.Models.UserAdViewModel

@{
    ViewBag.Title = "AdInfo";
}

<script src="@Url.Content("~/Scripts/sitescripts.js")" type="text/javascript"></script>

<div class="page-header">
    <h2>
        @Model.Ad.Name
        @if (Model.User.FavoritesAds != null && Model.User.FavoritesAds.Contains(Model.Ad.Id))
        {
            using (Html.BeginForm("StarAd", "Ad", new { adId = Model.Ad.Id }, FormMethod.Post))
            {
                <button type="submit" class="btn btn-warning btn-lg" onclick="return DecideToMakeAStar('fill-star')" 
                        style="float:right;">
                    <span class="glyphicon glyphicon-star" id="empty-star" aria-hidden="true"></span> Starred
                </button>
            }
        }
        else
        {
            using (Html.BeginForm("StarAd", "Ad", new { adId = Model.Ad.Id }, FormMethod.Post))
            {
            <button type="submit" class="btn btn-warning btn-lg" onclick="return DecideToMakeAStar('empty-star')"
                     style="float:right;">
                <span class="glyphicon glyphicon-star-empty" id="empty-star" aria-hidden="true"></span> Starred
            </button>
            }
        }
    </h2>

</div>
<div class="col-md-12">
    <div class="jumbotron" id="profile-bar">
        <h3>Author:</h3>
        <div class="row">
            <div class="col-md-5">
                <img src="@Url.Action("GetImage", "Image", new { id = @Model.User.Id })" class="img-responsive img-thumbnail" alt="avatar" />
            </div>
            <div class="col-md-7">
                <p class="text-capitalize" id="profile-text">@Model.User.Name @Model.User.Surname</p>
                <address style="margin:2%;">
                    @Model.User.StreetAddress<br>
                    @Model.User.Country<br>
                    <abbr title="Phone">P:</abbr> @Model.User.MobilePhone
                    <a href="mailto:#">@Model.User.Email</a>
                </address>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">
    @Html.Partial("AdSummary", @Model.Ad)
</div>
